<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".fragments.NewComplaintFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/complaintToolbar"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

       <TextView
           android:id="@+id/addComplaint"
           android:layout_width="288dp"
           android:layout_height="wrap_content"
           android:text="@string/add_a_complaint"
           android:layout_marginTop="13dp"
           android:lineSpacingExtra="2sp"
           android:fontFamily="@font/jost"
           android:textColor="#252525"
           android:textSize="18sp"
           android:translationY="-1sp"
           android:gravity="top"
           android:textStyle="bold"
           android:layout_marginStart="24dp"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:textColor="#434343"
                android:fontFamily="@font/jost"
                android:lineSpacingExtra="2sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/addComplaint"
                android:text="@string/please_fill_the_form_below_to_register_a_complaint"/>

            <ImageView
                android:id="@+id/backPress"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/close_24px"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="15dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/processingLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="20dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ProgressBar
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:theme="@style/progressDialog" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="@string/Please_Wait_we_are_submitting_your_complaint"
                android:textColor="@color/black"
                android:textSize="14sp" />

        </LinearLayout>

        <ScrollView
            android:id="@+id/complaintRegisterLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingBottom="10dp"
            android:scrollbars="none"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/complaintToolbar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="19dp"
                android:layout_marginEnd="15dp">


                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="105dp"
                        android:layout_height="wrap_content"
                        android:text="@string/date_time"
                        android:fontFamily="@font/jost"
                        android:textColor="#434343"
                        android:textSize="14sp" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/currentTimeTv"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:fontFamily="@font/jost"
                        android:hint="@string/date_time1"
                        android:background="@drawable/textview_shape"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="10dp"
                        android:layout_marginTop="5dp"
                        android:textColor="#434343"
                        android:textSize="15sp" />




                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="105dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/jost"
                        android:textColor="#434343"
                        android:textSize="14sp"
                        android:layout_marginTop="16dp"
                        android:text="@string/location" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/locationTv"
                        android:layout_width="match_parent"
                        android:layout_height="110dp"
                        android:fontFamily="@font/jost"
                        android:hint="@string/eg_eagle_street_chicago_illinois"
                        android:background="@drawable/textview_shape"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="10dp"
                        android:layout_marginTop="5dp"
                        android:textColor="#434343"
                        android:textSize="15sp" />


                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="105dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/jost"
                        android:textColor="#434343"
                        android:textSize="14sp"
                        android:layout_marginTop="16dp"
                        android:text="@string/issue" />



                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/complaintTitleTv"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:fontFamily="@font/jost"
                        android:hint="@string/please_enter_your_issue"
                        android:background="@drawable/textview_shape"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="10dp"
                        android:layout_marginTop="5dp"
                        android:textColor="#434343"
                        android:textSize="15sp"  />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/municipal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:fontFamily="@font/jost"
                    android:layout_gravity="center"
                    android:text="@string/muncipal_corporation"
                    android:background="@drawable/textview_selector_item"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="10dp"
                    android:layout_marginTop="16dp"
                    android:textColor="#434343"
                    android:textSize="15sp"  />



                <com.google.android.material.textview.MaterialTextView
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/jost"
                        android:textColor="#434343"
                        android:textSize="14sp"
                        android:layout_marginTop="16dp"
                        android:text="@string/description"
                        android:layout_width="105dp"/>

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/complaintDescriptionEt"
                    android:layout_width="match_parent"
                    android:layout_height="147dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/textview_shape"
                    android:fontFamily="@font/jost"
                    android:gravity="start"
                    android:hint="@string/describe_your_issue_in_detail"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="10dp"
                    android:textColor="#434343"
                    android:textSize="15sp" />






                <LinearLayout
                    android:id="@+id/uploadImageLayout"
                    android:layout_width="match_parent"
                    android:layout_height="145dp"
                    android:layout_marginTop="24dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/add_image_background"
                    android:orientation="vertical">

                    <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/imgRecView"
                            android:layout_width="match_parent"
                            android:layout_height="95dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="5dp"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/addImageText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/jost"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:text="@string/click_to_add_photos_add" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/uploadImageBtn"
                            android:layout_width="42dp"
                            android:layout_height="42dp"
                            android:layout_gravity="center"
                            android:background="@drawable/upload_background" />


                    </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="21dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/checkBox"
                        android:theme="@style/radioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />



                    <TextView
                        android:id="@+id/terms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/jost"
                        android:textSize="14sp"
                        android:layout_marginStart="5dp"
                        android:layout_gravity="center"
                        android:padding="2dp"
                        android:letterSpacing="0.01"
                        android:textColor="#434343"
                        android:text="@string/i_hereby_acknowledge_that_information_provided_above_is_best_to_my_knowledge_at_the_time"/>
                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/submitBtn"
                    android:layout_width="match_parent"
                    android:layout_height="53dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@drawable/et_background"
                    android:text="@string/submit"
                    android:layout_marginTop="40dp"
                    android:textColor="@color/white"
                    app:backgroundTint="#4B7BE5"
                    android:fontFamily="@font/inter"
                    android:textSize="16sp"
                    android:layout_marginBottom="30dp"
                    />

            </LinearLayout>

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>