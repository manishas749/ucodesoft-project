<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_generic_size_56"
        android:background="@color/app_bar"
        android:theme="@style/AppTheme.AppBarOverlay">

        <TextView
            android:id="@+id/chapter_header_book"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:textColor="@color/card_background"
            android:background="@color/app_bar"
            android:textSize="@dimen/text_size_30"
            android:layout_marginStart="@dimen/activity_generic_margin_start"/>

    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:id="@+id/chapter_header_chapter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_18"
        android:layout_below="@id/top_layout"/>

    <ListView
        android:id="@+id/listView"
        android:paddingTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/footer"
        android:layout_below="@+id/top_layout"
        android:background="@color/card_background"
        android:dividerHeight="0dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/footer"
        android:background="@color/background_color"
        android:layout_height="@dimen/banner_ad_portrait"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"/>

</RelativeLayout>