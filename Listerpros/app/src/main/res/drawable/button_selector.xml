<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#ffffff"> <!-- this is the ripple color(first touch color changes into this color) -->
    <item>
        <selector>
            <item android:state_enabled="true">
                <shape
                    android:shape="rectangle">
                    <!-- default button color -->

                    <solid android:color="#007BFF">
                    </solid>

                    <corners android:radius="151dp">
                    </corners>

                </shape>
            </item>
            <item>
                <shape
                    android:shape="rectangle">
                    <!-- button disabled color opposite behaviour -->
                    <solid android:color="#D9D9D9">
                    </solid>

                    <corners android:radius="151dp">
                    </corners>

                </shape>
            </item>
        </selector>
    </item>
    <item>
        <selector>
            <item android:state_pressed="true">
                <shape
                    android:shape="rectangle">
                    <!-- button first touch of your finger color -->
                    <solid android:color="#1989fa">
                    </solid>

                    <corners android:radius="151dp">
                    </corners>

                </shape>
            </item>
        </selector>
    </item>
    <item>
        <selector>
            <item android:state_hovered="true">
                <shape
                    android:shape="rectangle">
                    <!-- hovered with a note pencil -->
                    <solid android:color="#4affffff">
                    </solid>

                    <corners android:radius="151dp">
                    </corners>

                </shape>
            </item>
        </selector>
    </item>

</ripple>