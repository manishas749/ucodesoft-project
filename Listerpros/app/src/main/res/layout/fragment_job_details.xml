<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activities.MainActivity">

    <ImageView
        android:id="@+id/noJobFound"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/no_job_assign"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:visibility="visible"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
    </ImageView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/jobDetailsLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#85F9F9F9"
        android:visibility="gone">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/jobDetails"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/backPress"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="50dp"
            android:contentDescription="@string/large_title"
            android:src="@drawable/profile_settings_baseline_arrow_back_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/addNote"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="30dp"
            android:fontFamily="@font/manrope"
            android:text="@string/right_title"
            android:textColor="#007BFF"
            android:textSize="17sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            android:text="@string/large_title"
            android:textColor="@color/black"
            android:textSize="34sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/jobDetails">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraint1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FCFCFC"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/jobDetailDes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:fontFamily="@font/manrope_bold"
                    android:textColor="#042C5C"
                    android:textSize="23sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="@string/anytime_3hr" />

                <ImageView
                    android:id="@+id/location"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="8dp"
                    android:contentDescription="@string/large_title"
                    android:src="@drawable/job_details_map_layer_list"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/jobDetailDes"
                    app:layout_constraintVertical_bias="0.0" />

                <ImageView
                    android:id="@+id/message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="8dp"
                    android:contentDescription="@string/large_title"
                    android:src="@drawable/job_details_message_layer_list"
                    app:layout_constraintStart_toEndOf="@+id/location"
                    app:layout_constraintTop_toBottomOf="@+id/jobDetailDes"
                    app:layout_constraintVertical_bias="0.0" />


                <ImageView
                    android:id="@+id/call"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="8dp"
                    android:contentDescription="@string/large_title"
                    android:src="@drawable/job_details_call_layer_list"
                    app:layout_constraintStart_toEndOf="@+id/message"
                    app:layout_constraintTop_toBottomOf="@+id/jobDetailDes"
                    app:layout_constraintVertical_bias="0.0" />

                <Button
                    android:id="@+id/selectStatus"
                    android:layout_width="133dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="23dp"
                    android:layout_marginEnd="30dp"
                    android:background="@drawable/job_details_select_status_bg"
                    android:fontFamily="@font/manrope_semibold"
                    android:text="@string/on_the_way"
                    android:textColor="#1397FF"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/jobDetailDes" />

                <ImageView
                    android:id="@+id/bag"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:contentDescription="@string/large_title"
                    android:src="@drawable/job_details_bag_icon"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/selectStatus" />

                <TextView
                    android:id="@+id/preferred_shoot_date"
                    android:layout_width="0dp"
                    android:layout_height="21dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="20dp"
                    android:text="@string/thursday_ap"
                    android:textColor="#505050"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/bag"
                    app:layout_constraintTop_toBottomOf="@id/selectStatus" />

                <LinearLayout
                    android:id="@+id/line1"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="2dp"
                    app:layout_constraintTop_toBottomOf="@+id/bag">

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="25dp"
                        android:background="#979797" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/time"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="2dp"
                    android:contentDescription="@string/large_title"
                    android:src="@drawable/job_details_time_vector"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/line1" />

                <TextView
                    android:id="@+id/schedule_time"
                    android:layout_width="0dp"
                    android:layout_height="21dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="-2dp"
                    android:layout_marginEnd="20dp"
                    android:text="@string/Anytime_ap"
                    android:textColor="#505050"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/time"
                    app:layout_constraintTop_toBottomOf="@id/line1" />

                <LinearLayout
                    android:id="@+id/line2"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="2dp"
                    app:layout_constraintTop_toBottomOf="@+id/time">

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="25dp"
                        android:background="#979797" />

                    <TextView
                        android:id="@+id/access_method"
                        android:layout_width="wrap_content"
                        android:layout_height="21dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="3dp"
                        android:text="@string/meet_again"
                        android:textColor="#505050"
                        android:textSize="11sp" />

                    <ImageView
                        android:layout_width="5dp"
                        android:layout_height="5dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="9dp"
                        android:contentDescription="@string/large_title"
                        android:src="@drawable/job_details_dot_icon" />

                    <TextView
                        android:id="@+id/occupancy"
                        android:layout_width="wrap_content"
                        android:layout_height="21dp"
                        android:layout_marginStart="1dp"
                        android:layout_marginTop="3dp"
                        android:text="@string/vacant"
                        android:textColor="#505050"
                        android:textSize="11sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/locationIcon"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="2dp"
                    android:contentDescription="@string/large_title"
                    android:src="@drawable/job_detail_location_grey_icon"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/line2" />

                <TextView
                    android:id="@+id/address"
                    android:layout_width="0dp"
                    android:layout_height="21dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="-2dp"
                    android:layout_marginEnd="20dp"
                    android:text="@string/address"
                    android:textColor="#505050"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/time"
                    app:layout_constraintTop_toBottomOf="@id/line2" />

                <TextView
                    android:id="@+id/gateCode"
                    android:layout_width="wrap_content"
                    android:layout_height="21dp"
                    android:layout_marginStart="42dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="20dp"
                    android:text="@string/thursday_ap_gate_code"
                    android:textColor="#505050"
                    android:textSize="11sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/locationIcon" />

                <TextView
                    android:id="@+id/gateCodeInt"
                    android:layout_width="wrap_content"
                    android:layout_height="21dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="20dp"
                    android:text="@string/thursday_ap_gate_code"
                    android:textColor="#505050"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/gateCode"
                    app:layout_constraintTop_toBottomOf="@+id/locationIcon" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/notesTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/manrope"
                android:text="@string/notes_"
                android:textColor="#78869E"
                android:textSize="13sp"
                app:layout_constraintTop_toBottomOf="@+id/constraint1" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/notesConstraint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="#FCFCFC"
                app:layout_constraintTop_toBottomOf="@+id/notesTextView">

                <TextView
                    android:id="@+id/customer_name"
                    android:layout_width="132dp"
                    android:layout_height="18dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/manrope_semibold"
                    android:text="@string/user_name"
                    android:textColor="#042C5C"
                    android:textSize="15sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/currentDate"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:layout_marginStart="20dp"
                    android:fontFamily="@font/manrope"
                    android:text="@string/pm_december"
                    android:textColor="#78869E"
                    android:textSize="11sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/customer_name" />

                <LinearLayout
                    android:id="@+id/line4"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@+id/currentDate">

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:background="#F4F4F4" />

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/addNoteRecycleView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/line4" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/myJobTask"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/manrope"
                android:text="@string/notes_my_job_task"
                android:textColor="#78869E"
                android:textSize="13sp"
                app:layout_constraintTop_toBottomOf="@+id/notesConstraint" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/myJobTaskRecycleView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/myJobTask" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/completeTaskButton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="70dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/button_selector"
                android:enabled="false"
                android:text="@string/complete"
                android:textColor="#B1B1B1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/myJobTaskRecycleView" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>