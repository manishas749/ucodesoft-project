<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
        <style name="Theme.RentReadyChecklist" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/nwhs</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/nwhs</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/nwhs</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <!-- Customize your theme here. -->

        <item name="popupMenuStyle">@style/popUpMenuStyle</item>

    </style>

    <style name="app_text_style">
        <item name="android:textColor">@color/white</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="new_checklist_style">
        <item name="android:textColor">#2D2D2D</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="fontWeight">500</item>
        <item name="android:textSize">18sp</item>
    </style>


    <style name="ok_na_fix_style">
        <item name="android:letterSpacing">0.01</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="fontWeight">500</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="form_title_style">
        <item name="android:textColor">#040062</item>
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="fontWeight">400</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="progressDialog">
        <item name="colorSecondary">@color/nwhs</item>
        <item name="colorControlActivated">@color/nwhs</item>
    </style>

</resources>