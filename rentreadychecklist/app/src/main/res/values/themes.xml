<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RentReadyChecklist" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/nwhs</item>
        <item name="colorPrimaryVariant">@color/nwhs</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/nwhs</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/nwhs</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="background">@drawable/splash_screen_home_image</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>

        <!-- Customize your theme here. -->
        <item name="popupMenuStyle">@style/popUpMenuStyle</item>

    </style>

    <style name="colored_checkbox" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorControlNormal">@color/nwhs</item>
        <item name="android:textColorSecondary">@color/nwhs</item>
    </style>

    <style name="app_text_style">
        <item name="android:textColor">@color/white</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="new_checklist_style">
        <item name="android:textColor">#2D2D2D</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="fontWeight">500</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ok_na_fix_style">
        <item name="android:letterSpacing">0.01</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="fontWeight">500</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="story_style">
        <item name="android:textColor">#2D2D2D</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="fontWeight">500</item>
    </style>

    <style name="form_title_style">
        <item name="android:textColor">#040062</item>
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="fontWeight">400</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/black</item>
    </style>
    <style name="Theme.RentReadyChecklist.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.RentReadyChecklist.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.RentReadyChecklist.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="popUpMenuStyle" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@color/white</item>
    </style>

    <style name="progressDialog">
        <item name="colorSecondary">@color/nwhs</item>
        <item name="colorControlActivated">@color/nwhs</item>
    </style>

</resources>